<!--pages/fortune-result.wxml-->
<view class="result-page">
  <view class="wrap">
    <view class="main">
      <!--margin: 0;padding: 0;解决某些机型有边距出现的问题-->
      <canvas canvas-id="myCanvas" style="width:100%;height:600px;margin: 0;padding: 0;display: block;"></canvas>
    </view>
  </view>

  <view class="footer">
    <view class="btn-layout">
      <button class="btn-pierced btn-width" bindtap="returnIndex">换个名字测</button>
    </view>
    <view class="btn-layout">
      <button class="btn btn-layout btn-width" bindtap="saveImage">保存图片</button>
    </view>
  </view>

  <view class="adfooter">
    <!-- 广点通banner广告开始-->
    <view class="gdtad">
      <ad data-adid="7b785b4eb90d2dc564e3bdad610be015" unit-id="7b785b4eb90d2dc564e3bdad610be015"></ad>
    </view>
    <!-- 广点通banner广告结束-->
  </view>


</view>
